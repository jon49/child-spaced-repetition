/****************************************
  Reset
*****************************************/

text-color = #777

html {
	color: text-color;
	font-family: 'Open Sans', Arial;
  font-size: 16px;
}
* {
	box-sizing: border-box;
	color: inherit;
	font-family: inherit;
	font-size: inherit;
}
html, body { height: 100%; padding: 0; margin: 0; }
body { min-height: 100%; }
img { 
  display: block;
}
a:focus, a:active, button:focus {
	outline: 0;
}
